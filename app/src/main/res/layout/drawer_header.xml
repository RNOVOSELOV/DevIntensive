<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/header_bg"
    android:paddingBottom="@dimen/padding_medium_8"
    android:paddingLeft="@dimen/margin_normal_16"
    android:paddingRight="@dimen/margin_normal_16"
    android:paddingTop="@dimen/padding_xxlarge_24">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_normal_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_large_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/drawer_header_text"
            android:fontFamily="sans-serif-medium"
            android:text="Новоселов Роман" />

        <TextView
            android:id="@+id/user_e_mail_txt_txt"
            style="@style/drawer_header_text"
            android:fontFamily="sans-serif"
            android:text="mail@e-mail.com" />
    </LinearLayout>

</RelativeLayout>