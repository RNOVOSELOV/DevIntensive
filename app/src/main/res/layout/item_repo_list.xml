<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_big_72">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_repo_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_great_72"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/item_repo_et"
            style="@style/item_text_input_layout"
            android:hint="@string/layout_text_repo" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/item_repo_iv"
        style="@style/icon.right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/eye" />
</RelativeLayout>