<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_width">@dimen/size_small_24</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        <item name="android:layout_gravity">top|right</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_gravity">top|left</item>
    </style>

    <style name="panel_item">
        <item name="android:layout_height">@dimen/spacing_large_56</item>
        <item name="android:layout_width">@dimen/spacing_zero_0</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="panel_sub_item">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
